<!DOCTYPE html>
<html>
<head>
  <title>Invoice</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<%- include("partials/navbar") %>

<div class="container mt-4">

  <h2>Invoice #<%= order.id %></h2>
  <p><strong>Date:</strong> <%= order.createdAt.toLocaleString() %></p>
  <p><strong>Total:</strong> $<%= order.totalAmount %></p>

  <h4 class="mt-4">Items Purchased</h4>

  <table class="table table-bordered mt-2">
    <thead>
      <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.productName %></td>
          <td><img src="/images/<%= item.image %>" width="80"></td>
          <td><%= item.quantity %></td>
          <td>$<%= item.price %></td>
          <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/mypurchases" class="btn btn-secondary">Back to Purchases</a>
  <a href="/shopping" class="btn btn-primary">Continue Shopping</a>

</div>

</body>
</html>

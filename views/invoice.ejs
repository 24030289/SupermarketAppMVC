<!DOCTYPE html>
<html>
<head>
  <title>Invoice</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<%- include("partials/navbar") %>

<div class="container mt-4">

  <h2>Invoice #<%= order.id %></h2>
  <p><strong>Date:</strong> <%= order.createdAt.toLocaleString() %></p>
  <p><strong>Total:</strong> $<%= order.totalAmount %></p>

  <h4 class="mt-4">Items Purchased</h4>

  <table class="table table-bordered mt-2">
    <thead>
      <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.productName %></td>
          <td>
             <% if (item.productImage) { %>
              <img src="/images/<%= item.productImage %>" width="80">
            <% } else { %>
            <span class="text-muted">No image</span>
         <% } %>
          </td>

          <td><%= item.quantity %></td>
          <td>$<%= item.price %></td>
          <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>


  <!-- Show buttons only for normal users -->
<% if (user && user.role === 'user') { %>
  <a href="/mypurchases" class="btn btn-secondary">Back to Purchases</a>
  <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
  <a href="/invoice/<%= order.id %>/pdf" class="btn btn-warning">Download as PDF</a>
<% } else if (user && user.role === 'admin') { %>
  <a href="/admin/orders" class="btn btn-dark">Back to Orders</a>
<% } %>


</div>

</body>
</html>

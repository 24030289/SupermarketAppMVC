<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>

<%- include("partials/navbar", { user: user }) %>

<div class="container mt-4">

  <h3>Welcome, <%= user.username %>!</h3>

  <!-- Search Form -->
  <form method="GET" action="/shopping" class="d-flex mb-3">
      <input 
        type="text" 
        name="search" 
        class="form-control me-2" 
        placeholder="Search products..."
        value="<%= search %>"
      >
      <button class="btn btn-primary">Search</button>
  </form>

  <h2 class="text-center">Products</h2>

  <table class="table table-hover small text-center mt-4">
    <thead>
      <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Buy</th>
      </tr>
    </thead>

    <tbody>
      <% products.forEach(p => { %>
        <tr>
          <td><a href="/product/<%= p.id %>"><%= p.productName %></a></td>

          <td>
            <img src="/images/<%= p.image %>" width="80">
          </td>

          <td>
            <%= p.quantity %>
            <% if (p.quantity === 0) { %>
              <br><span class="text-danger small">Out of stock</span>
            <% } %>
          </td>

          <td>$<%= p.price.toFixed(2) %></td>

          <!-- QTY DROPDOWN (LIMITED TO STOCK) -->
          <td>
            <select class="form-control"
                onchange="document.getElementById('qty-<%= p.id %>').value = this.value"
                <%= p.quantity === 0 ? 'disabled' : '' %>>
                
                <% let maxQty = Math.min(5, p.quantity); %>
                <% for (let q = 1; q <= maxQty; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                <% } %>
            </select>
          </td>

          <!-- BUY BUTTON -->
          <td>
            <form action="/add-to-cart/<%= p.id %>" method="POST">
              <input type="hidden" id="qty-<%= p.id %>" name="quantity" value="1">

              <button class="btn btn-primary mt-1"
                <%= p.quantity === 0 ? "disabled" : "" %>>
                Buy
              </button>
            </form>
          </td>

        </tr>
      <% }) %>
    </tbody>

  </table>

</div>

</body>
</html>
